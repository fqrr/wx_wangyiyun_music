@import "/static/iconfont/iconfont.wxss";
/* 头部 */
.recommendSongContainer .header{
  position: relative;
  width: 100%;
  height: 300rpx;

}
/* 头部图片 */
.recommendSongContainer .header image{
  width: 100%;
  height: 100%;
}
/* 日期 */
.recommendSongContainer .header .date{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -140rpx;
  margin-top: -30rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.header .date .day{
  font-size: 38rpx;
}

/* <!-- 列表区域 --> */
.ListContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;

}
.listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changeMore{
  float:right
}
/* 内容区 */
.listScroll{
  height: calc(100vh - 380rpx);
}


.scrollItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  
}

.musicInfo text{
height:  40rpx;
font-size: 24rpx;
line-height: 40rpx;
/* 防止歌名过长 */
max-width:400rpx;
white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
/* 溢出省略号替代 */
}
.scrollItem .iconfont{
  position: absolute;
  /* 提升用户体验提高点击的区域 */
  width: 80rpx;
  height: 80rpx;
  right: 0;
  line-height: 80rpx;
  text-align: right;
}